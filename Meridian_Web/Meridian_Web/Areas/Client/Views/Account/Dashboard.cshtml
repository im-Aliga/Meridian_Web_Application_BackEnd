@using Meridian_Web.Areas.Client.ViewModels.Account;
@model MyProfileViewModel


<div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
    <div class="dash__pad-2">
        <h1 class="dash__h1 u-s-m-b-14">My Profile</h1>

        <span class="dash__text u-s-m-b-30">Look all your info, you could customize your profile.</span>
        <div class="row">
            <div class="col-lg-4 u-s-m-b-30">
                <h2 class="dash__h2 u-s-m-b-8">Name</h2>

                <span class="dash__text">@Model.Name</span>
            </div>

            <div class="col-lg-4 u-s-m-b-30">
                <h2 class="dash__h2 u-s-m-b-8">Surname</h2>

                <span class="dash__text">@Model.Surname</span>
            </div>
            <div class="col-lg-4 u-s-m-b-30">
                <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                <span class="dash__text">@Model.Email</span>
                
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                
                <div class="u-s-m-b-16">

                    <a class="dash__custom-link btn--e-transparent-brand-b-2" asp-route="client-account-edit">Edit Profile</a>
                </div>
               
            </div>
        </div>
    </div>
</div>