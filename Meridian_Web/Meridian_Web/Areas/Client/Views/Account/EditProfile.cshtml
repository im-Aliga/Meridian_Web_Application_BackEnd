@using Meridian_Web.Areas.Client.ViewModels.Account;
@model EditMyProfileViewModel

<div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white">
    <div class="dash__pad-2">
        <h1 class="dash__h1 u-s-m-b-14">Edit Profile</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <span class="dash__text u-s-m-b-30">Looks like you haven't update your profile</span>
        <div class="dash__link dash__link--secondary u-s-m-b-30">

            <a data-modal="modal" data-modal-id="#dash-newsletter">Subscribe Newsletter</a>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-route="client-account-edit" class="dash-edit-p">
                    <div class="gl-inline">
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-fname">FIRST NAME *</label>

                            <input asp-for="Name" class="input-text input-text--primary-style" type="text" id="reg-fname" placeholder="John">
                        </div>
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-lname">LAST NAME *</label>

                            <input asp-for="Surname" class="input-text input-text--primary-style" type="text" id="reg-lname" placeholder="Doe">
                        </div>
                    </div>
                    <div class="gl-inline">
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-fname">EMAIL *</label>

                            <input asp-for="Email" class="input-text input-text--primary-style" type="email" id="reg-fname" placeholder="EMAIL">
                        </div>
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-lname">Current Password *</label>

                            <input asp-for="CurrentPassword" class="input-text input-text--primary-style" type="password" id="reg-lname" placeholder="Current Password">
                        </div>
                    </div>
                    <div class="gl-inline">
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-fname">Password *</label>

                            <input asp-for="Password" class="input-text input-text--primary-style" type="password" id="reg-fname" placeholder="Password">
                        </div>
                        <div class="u-s-m-b-30">

                            <label class="gl-label" for="reg-lname">Confirm Password *</label>

                            <input asp-for="ConfirmPassword" class="input-text input-text--primary-style" type="password" id="reg-lname" placeholder="Confirm Password">
                        </div>
                    </div>
                   
                   

                    <button class="btn btn--e-brand-b-2" type="submit">SAVE</button>
                </form>
            </div>
        </div>
    </div>
</div>
