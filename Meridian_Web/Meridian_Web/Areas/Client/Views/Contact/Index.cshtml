@using Meridian_Web.Areas.Client.ViewModels.Contact;
@model ContactViewModel
<div class="app-content">

    <!--====== Section 1 ======-->
    <!--====== End - Section 1 ======-->
    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="g-map">
                            <div id="map">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.42849014571!2d49.851756815691495!3d40.377194965966346!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1sen!2saz!4v1679262501867!5m2!1sen!2saz" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
    <!--====== Section 3 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row">

                    @foreach (var contactInformation in Model.ContactInformations)
                    {

                        <div class="col-lg-4 col-md-6 u-s-m-b-30">
                            <div class="contact-o u-h-100">
                                <div class="contact-o__wrap">
                                    <div class="contact-o__icon"><img  src="~/@contactInformation.ImgUrl"/></div>

                                    <span class="contact-o__info-text-1">@contactInformation.Title</span>

                                    <span class="contact-o__info-text-2">@contactInformation.MainContext</span>

                                    <span class="contact-o__info-text-2">@contactInformation.Context</span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 3 ======-->
    <!--====== Section 4 ======-->
    @Html.Partial("/Areas/client/Views/Shared/Partials/_ContactPartial.cshtml")
    <!--====== End - Section 4 ======-->
</div>