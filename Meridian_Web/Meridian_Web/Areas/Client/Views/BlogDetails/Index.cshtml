@using Meridian_Web.Areas.Client.ViewModels.BlogDetails;
@using Meridian_Web.Areas.Client.ViewModels.Comment;
@model BlogDetailsViewModel
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-90">

        <!--====== Detail Post ======-->
        <div class="detail-post">
            <div class="bp-detail">
                <div class="bp-detail__thumbnail">
                    @foreach (var file in Model.Files)
                    {
                        @if (file.IsShowImage && !file.IsShowVideo & !file.IsShowAudio)
                        {
                            <div class="aspect aspect--bg-grey aspect--1366-768">

                                <img class="aspect__img" src="~/@file.FileUrl" alt="">
                            </div>

                        }
                        @if (file.IsShowVideo && !file.IsShowImage && !file.IsShowAudio)
                        {

                            <div class="aspect aspect--bg-grey aspect--1366-768">

                                <video width="320" height="240" controls>
                                    <source src="~/@file.FileUrl" type="video/mp4">
                                </video>
                            </div>
                        }
                        @if (file.IsShowAudio && !file.IsShowImage && !file.IsShowVideo)
                        {
                            <div class="aspect aspect--bg-grey aspect--1366-768">

                                <audio controls style="width:50%;height:50%; border-radius:0">
                                    <source src="~/@file.FileUrl">
                                </audio>

                            </div>
                        }

                    }

                </div>
                <div class="bp-detail__info-wrap">
                    <div class="bp-detail__stat">

                        <span class="bp-detail__stat-wrap">

                            <span class="bp-detail__publish-date">

                                <a href="blog-right-sidebar.html">

                                    <span>@Model.CreatedAt</span>
                                </a>
                            </span>
                        </span>

                        <span class="bp-detail__stat-wrap">



                            <span class="bp-detail__stat-wrap">

                                <span class="bp-detail__category">
                                    @foreach (var category in Model.Catagories)
                                    {
                                      <a href="blog-right-sidebar.html">@category.Title</a>
                                        
                                    }


                                   
                                </span>
                            </span>
                    </div>

                    <span class="bp-detail__h1">

                        <a href="blog-detail.html">@Model.Title</a>
                    </span>
                    <div class="blog-t-w">

                       @foreach (var tag in Model.Tags)
                       {
                        <a class="gl-tag btn--e-transparent-hover-brand-b-2" href="blog-right-sidebar.html">#@tag.Title</a>
                            
                       }

                    </div>
                    <p class="bp-detail__p">
                       @Model.Description
                    </p>
                    <p class="bp-detail__p">It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using <del>Lorem Ipsum</del> is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like).</p>
                    <blockquote class="bp-detail__q">
                        <i class="fas fa-quote-left"></i>

                        <span class="bp-detail__q-title">@Model.Proverb</span><cite class="bp-detail__q-citation">— @Model.ProverbAuthor</cite>
                    </blockquote>
                    <p class="bp-detail__p"> @Model.Description</p>
                   

                </div>
            </div>
        </div>
    </div>
    <!--====== End - Detail Post ======-->
    <div class="u-s-p-b-60">
        <div class="d-meta">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-meta__comment-arena">

                            <span class="d-meta__text u-s-m-b-36"> @Model.Comment.Count thoughts on "Wait till is open"</span>
                            <div class="d-meta__comments u-s-m-b-30">
                                <ol>
                                    <li>

                                        <!--====== Comment ======-->
                                        @foreach(var comment in Model.Comment)
                                        {
                                          <div class="d-meta__p-comment">
                                            <div class="p-comment__wrap1">
                                                <div class="aspect aspect--square p-comment__img-wrap">

                                                  @*  <img src="images/blog/avatar-2.jpg" alt="">*@
                                                </div>
                                            </div>
                                            <div class="p-comment__wrap2">

                                                <span class="p-comment__author">@comment.Name</span>

                                                <span class="p-comment__timestamp">

                                                    <a href="#">

                                                        <span>@comment.CreatedAt</span>
                                                    </a>
                                                </span>
                                                <p class="p-comment__paragraph">@comment.Email</p>


                                            </div>
                                        </div>
                                            
                                        }
                                        <!--====== End - Comment ======-->

                                    </li>
                                </ol>
                            </div>

                            <span class="d-meta__text-2 u-s-m-b-6">Join the Conversation</span>

                            <span class="d-meta__text-3 u-s-m-b-16">Your email address will not be published. Required fields are marked *</span>



                            <form method="POST" asp-route="client-blogdetails-comment" asp-route-blogId="@Model.Id" class="respond__form">

                              
                                <div class="respond__group">
                                    <div class="u-s-m-b-15">

                                        <label class="gl-label" for="comment">COMMENT *</label>
                                        <textarea asp-for="Context" class="text-area text-area--primary-style" id="comment"></textarea>
                                    </div>
                                    <div>
                                        <p class="u-s-m-b-30">

                                            <label class="gl-label" for="responder-name">NAME *</label>

                                            <input asp-for="Name" class="input-text input-text--primary-style" type="text" id="responder-name">
                                        </p>
                                        <p class="u-s-m-b-30">

                                            <label class="gl-label" for="responder-email">EMAIL *</label>

                                            <input asp-for="Email" class="input-text input-text--primary-style" type="text" id="responder-email">
                                        </p>
                                    </div>
                                </div>
                                <div>

                                    <button class="btn btn--e-brand-shadow" type="submit">POST COMMENT</button>
                                </div>
                              
                            </form>


                          





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
</div>