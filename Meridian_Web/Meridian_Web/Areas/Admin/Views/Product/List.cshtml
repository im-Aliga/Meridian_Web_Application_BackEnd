@using Meridian_Web.Areas.Admin.ViewModels.Product
@model List<ProductListViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Product</h4>
            <a asp-route="admin-product-add" class="btn btn-danger btn-lg mb-5 m">Add new Product</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Discount Price</th>
                            <th>Stock</th>
                            <th>Brands</th>
                            <th>Sizes </th>
                            <th>Colors</th>
                            <th>Tags</th>
                            <th>Categories</th>
                            <th>Discount</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>

                                <td>@product.Title</td>
                                <td>@product.Content</td>
                                <td>@product.Price</td>
                                <td>@product.DiscountPrice</td>
                                <td>@product.InStock</td>
                                <td>@string.Join( " and  ", product.Brands.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", product.Sizes.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", product.Colors.Select(c => $"{c.Name}"))</td>
                                <td>@string.Join( " and  ", product.Categories.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", product.Tags.Select(c => $"{c.Title}"))</td>
                                <td>@string.Join( " and  ", product.Discounts.Select(c => $"{c.Title}"))</td>
                                <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@product.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">

                                    <a asp-route="admin-product-update" asp-route-id="@product.Id" class="btn btn-outline-secondary btn-fw p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-product-delete" asp-route-id="@product.Id" id="delete-@product.Id">
                                    </form>

                                    <button type="submit" form="delete-@product.Id" class="btn btn-outline-danger btn-fw p-3">Delete</button>
                                    <a class=" btn btn-outline-info btn-fw p-3" asp-route="admin-productimg-list" asp-route-productId="@product.Id">Product Images</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
