@using Meridian_Web.Areas.Admin.ViewModels.Navbar
@model List<ListViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Navbars</h4>
            <a asp-route="admin-navbar-add"  class="btn btn-danger btn-lg mb-5 m">Add new Navbar</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Order</th>
                            <th>Url</th>
                            <th>Header</th>
                            <th>Footer</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Title</td>
                                <td>@navbar.Order</td>
                                <td>@navbar.Url</td>
                                <td>@navbar.IsShowHeader</td>
                                <td>@navbar.IsShowFooter</td>
                                <td>@navbar.CreatedAt</td>
                                <td>@navbar.UpdatedAt</td>
                                 
                                <td class="text-end">
                                    <a asp-route="admin-navbar-update" asp-route-id="@navbar.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-navbar-delete" asp-route-id="@navbar.Id" id="delete-@navbar.Id">
                                    </form>

                                    <button type="submit" form="delete-@navbar.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>