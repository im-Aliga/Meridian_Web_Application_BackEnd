@using Meridian_Web.Areas.Admin.ViewModels.BlogCategory

@model List<ListItemViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Blog Categories</h4>
            <a asp-route="admin-blogcategory-add" class="btn btn-danger btn-lg mb-5 m">Add new Category</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blogCategory in Model)
                        {
                            <tr>
                                <td>@blogCategory.Title</td>
                                <td>@blogCategory.CreatedAt</td>
                                <td>@blogCategory.UpdatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-blogcategory-update" asp-route-id="@blogCategory.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-blogcategory-delete" asp-route-id="@blogCategory.Id" id="delete-@blogCategory.Id">
                                    </form>

                                    <button type="submit" form="delete-@blogCategory.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
