@using BackEndFinalProject.Areas.Admin.ViewModels.About
@model List<ListItemViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">About</h4>
            <div class="table-responsive" style="overflow-y: hidden;">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var about in Model)
                        {
                            <tr>
                                <td>@about.Title</td>
                                <td>@about.Content</td>
                                <td>@about.UpdatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-about-update" asp-route-id="@about.Id" class="btn-outline-secondary p-3">Update</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
