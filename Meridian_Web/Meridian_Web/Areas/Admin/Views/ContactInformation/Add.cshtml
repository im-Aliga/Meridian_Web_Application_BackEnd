@using Meridian_Web.Areas.Admin.ViewModels.ContactInformation
@model AddContactInformationViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Add New Contact Information</h4>
            <form method="POST" asp-route="admin-contactinformation-add" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainContext"></label>
                    <input asp-for="MainContext" class="form-control" placeholder="MainContext">
                    <span asp-validation-for="MainContext" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content">Textarea</label>
                    <textarea asp-for="Content" class="form-control" id="exampleTextarea1" rows="4" placeholder="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="Image" type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                        </span>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>

            </form>
        </div>
    </div>
</div>

