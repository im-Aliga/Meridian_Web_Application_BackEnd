@using Meridian_Web.Areas.Admin.ViewModels.Discount
@model List<ListItemViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Product Discounts</h4>
            <a asp-route="admin-discount-add" class="btn btn-danger btn-lg mb-5 m">Add New Discount</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Discount Percent</th>
                            <th>Discount Time</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var discount in Model)
                        {
                            <tr>
                                <td>@discount.Title</td>
                                <td>@discount.DiscontPers</td>
                                <td>@discount.DiscountTime.ToString("dd/MM/yyyy")</td>
                                <td>@discount.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@discount.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-discount-update" asp-route-id="@discount.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-discount-delete" asp-route-id="@discount.Id" id="delete-@discount.Id">
                                    </form>

                                    <button type="submit" form="delete-@discount.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

