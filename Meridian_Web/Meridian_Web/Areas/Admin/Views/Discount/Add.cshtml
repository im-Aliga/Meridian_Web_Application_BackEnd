@using Meridian_Web.Areas.Admin.ViewModels.Discount

@model AddViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Add New Discount</h4>
            <form method="POST" asp-route="admin-discount-add" class="forms-sample">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscontPers"></label>
                    <input asp-for="DiscontPers" class="form-control" placeholder="DiscontPers">
                    <span asp-validation-for="DiscontPers" class="text-danger"></span>
                </div>

               
                <div class="form-group">
                    <label asp-for="DiscountTime"></label>
                    <div class="date">
                        <input asp-for="DiscountTime" class="salsa-calendar-input form-control"/>
                    </div>
                    <span asp-validation-for="DiscountTime" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>

            </form>
        </div>
    </div>
</div>