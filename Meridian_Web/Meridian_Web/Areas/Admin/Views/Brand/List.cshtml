@using Meridian_Web.Areas.Admin.ViewModels.Brand
@model List<ListBrandViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Brands</h4>
            <a asp-route="admin-brand-add" class="btn btn-danger btn-lg mb-5 m">Add new Brand</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td><img style="width:50%;height:50%; border-radius:0" src="~/@brand.ImageUrl"></td>
                                <td>@brand.Name</td>
                                <td>@brand.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@brand.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">
                                    <a asp-route="admin-brand-update" asp-route-id="@brand.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-brand-delete" asp-route-id="@brand.Id" id="delete-@brand.Id">
                                    </form>

                                    <button type="submit" form="delete-@brand.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>