@using Meridian_Web.Areas.Admin.ViewModels.FeedBack
@model List<ListFeedBackViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">FeedBacks</h4>
            <a asp-route="admin-feedback-add" class="btn btn-danger btn-lg mb-5 m">Add new Feedback</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>FullName</th>
                            <th>Content</th>
                            <th>Position</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feedBack in Model)
                        {
                            <tr>
                                <td><img style="width:50%;height:50%; border-radius:0" src="~/@feedBack.ImageUrl"></td>
                                <td>@feedBack.FullName</td>
                                <td>@feedBack.Context</td>
                                <td>@feedBack.Role</td>
                                <td>@feedBack.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@feedBack.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">
                                    <a asp-route="admin-feedback-update" asp-route-id="@feedBack.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-feedback-delete" asp-route-id="@feedBack.Id" id="delete-@feedBack.Id">
                                    </form>

                                    <button type="submit" form="delete-@feedBack.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>