@using Meridian_Web.Areas.Admin.ViewModels.FeedBack
@model AddFeedbackViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Update Feedback</h4>
            <form method="POST" asp-route="admin-feedback-update" asp-route-id="@Model.Id" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="FullName">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Role"></label>
                    <input asp-for="Role" class="form-control" placeholder="MainContext">
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Context">Textarea</label>
                    <textarea asp-for="Context" class="form-control" id="exampleTextarea1" rows="4" placeholder="Context"></textarea>
                    <span asp-validation-for="Context" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="Image" type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                        </span>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <img src="~/@Model.ImageUrl" width="20%" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>

            </form>
        </div>
    </div>
</div>
