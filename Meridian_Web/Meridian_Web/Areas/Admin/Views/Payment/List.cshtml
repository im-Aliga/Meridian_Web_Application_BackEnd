@using Meridian_Web.Areas.Admin.ViewModels.Payment
@model List<ListPaymentViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Payment  Benefits</h4>
            <a asp-route="admin-payment-add" class="btn btn-danger btn-lg mb-5 m">Add New Payment Benefits</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td><img style="width:50%;height:50%; border-radius:0" src="~/@payment.ImageUrl"></td>
                                <td>@payment.Title</td>
                                <td>@payment.Context</td>
                                <td>@payment.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@payment.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">
                                    <a asp-route="admin-payment-update" asp-route-id="@payment.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-payment-delete" asp-route-id="@payment.Id" id="delete-@payment.Id">
                                    </form>

                                    <button type="submit" form="delete-@payment.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
