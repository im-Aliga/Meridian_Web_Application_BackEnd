
@using Meridian_Web.Areas.Admin.ViewModels.ProductImage

@model ProductImageViewModel

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Product Image</h4>
            <a asp-route="admin-productimg-add" asp-route-productId="@Model.Id" class="btn btn-danger btn-lg mb-5 m">Add New Product Image</a>
            <a asp-route="admin-product-list" class="btn btn-danger btn-lg mb-5 m">Product List</a>

            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var productImg in Model.Images)
                        {
                            <tr>

                                <td><img src="~/@productImg.ImageUrl" style="width:50%;height:50%; border-radius:0" /></td>
                                <td>@productImg.CreatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">

                                    <form method="POST" asp-route="admin-productimg-delete" asp-route-productId="@Model.Id" asp-route-productImageId="@productImg.Id" id="product-image-form-@productImg.Id"></form>
                                    <button type="submit" form="product-image-form-@productImg.Id" class="btn btn-outline-danger btn-fw p-3">
                                        DELETE
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

