
@using Meridian_Web.Areas.Admin.ViewModels.Contact;

@model List<ListContactViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">User Contact</h4>
            
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>FirstName</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model)
                        {
                            <tr>
                                <td>@contact.FirstName</td>
                                <td>@contact.Email</td>
                                <td>@contact.Subject</td>
                                <td>@contact.Message</td>
                                <td class="text-end">

                                    <form class="d-none" method="POST" asp-route="admin-contact-delete" asp-route-id="@contact.Id" id="delete-@contact.Id">
                                    </form>

                                    <button type="submit" form="delete-@contact.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
