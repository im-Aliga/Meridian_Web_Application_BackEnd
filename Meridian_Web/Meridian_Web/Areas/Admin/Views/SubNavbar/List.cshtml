@using Meridian_Web.Areas.Admin.ViewModels.SubNavbar
@model List<ListViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Subnavbars</h4>
            <a asp-route="admin-subnavbar-add" class="btn btn-danger btn-lg mb-5 m">Add new Subnavbar</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Order</th>
                            <th>Navbar</th>
                            <th>Url</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subnavbar in Model)
                        {
                            <tr>
                                <td>@subnavbar.Title</td>
                                <td>@subnavbar.Order</td>
                                <td>@subnavbar.Navbar</td>
                                <td>@subnavbar.Url</td>
                                <td>@subnavbar.CreatedAt</td>
                                <td>@subnavbar.UpdatedAt</td>

                                <td class="text-end">
                                    <a asp-route="admin-subnavbar-update" asp-route-id="@subnavbar.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-subnavbar-delete" asp-route-id="@subnavbar.Id" id="delete-@subnavbar.Id">
                                    </form>

                                    <button type="submit" form="delete-@subnavbar.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>