@using Meridian_Web.Areas.Admin.ViewModels.User
@model List<ListUserViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Users</h4>
            <a asp-route="admin-user-add" class="btn btn-danger btn-lg mb-5 m">Add new User</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Password Hash</th>
                            <th>City</th>
                            <th>Address </th>
                            <th>Role</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>

                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Password</td>
                                <td>@user.Address.City</td>
                                <td>@user.Address.Address</td>
                                @if (@user.Roles != null)
                                {
                                    <td>@user.Roles</td>
                                }
                                @if (@user.Roles == null)
                                {
                                    <td>User</td>
                                }
                                <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@user.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">

                                    <a asp-route="admin-user-update" asp-route-id="@user.Id" class="btn btn-outline-secondary btn-fw p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-user-delete" asp-route-id="@user.Id" id="delete-@user.Id">
                                    </form>

                                    <button type="submit" form="delete-@user.Id" class="btn btn-outline-danger btn-fw p-3">Delete</button>
                                  
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

