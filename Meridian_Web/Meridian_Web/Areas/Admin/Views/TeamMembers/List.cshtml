@using Meridian_Web.Areas.Admin.ViewModels.TeamMember
@model List<ListViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Team Members</h4>
            <a asp-route="admin-teammember-add" class="btn btn-danger btn-lg mb-5 m">Add new Member</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>FullName</th>
                            <th>Position</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teamMember in Model)
                        {
                            <tr>
                                <td><img style="width:50%;height:50%; border-radius:0" src="~/@teamMember.ImageUrl"></td>
                                <td>@teamMember.FullName</td>
                                <td>@teamMember.Position</td>
                                <td>@teamMember.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@teamMember.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">
                                    <a asp-route="admin-teammember-update" asp-route-id="@teamMember.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-teammember-delete" asp-route-id="@teamMember.Id" id="delete-@teamMember.Id">
                                    </form>

                                    <button type="submit" form="delete-@teamMember.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>