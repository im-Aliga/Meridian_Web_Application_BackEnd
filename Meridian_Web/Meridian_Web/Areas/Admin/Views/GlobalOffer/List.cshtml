@using Meridian_Web.Areas.Admin.ViewModels.GlobalOffer
@model List<ListItemViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Global Offers</h4>
            <a asp-route="admin-globaloffer-add" class="btn btn-danger btn-lg mb-5 m">Add New Global Offer</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Main Content</th>
                            <th>Content</th>
                            <th>Button Title</th>
                            <th>Offer Time</th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var globalOffer in Model)
                        {
                            <tr>
                                <td>@globalOffer.Title</td>
                                <td>@globalOffer.MainContext</td>
                                <td>@globalOffer.Context</td>
                                <td>@globalOffer.ButtonContext</td>
                                <td>@globalOffer.OfferTime.ToString("dd/MM/yyyy")</td>
                                <td>@globalOffer.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@globalOffer.UpdatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <a asp-route="admin-globaloffer-update" asp-route-id="@globalOffer.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-globaloffer-delete" asp-route-id="@globalOffer.Id" id="delete-@globalOffer.Id">
                                    </form>

                                    <button type="submit" form="delete-@globalOffer.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

