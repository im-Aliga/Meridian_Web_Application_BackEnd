@using Meridian_Web.Areas.Admin.ViewModels.Slider
@model List<ListSliderViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Slider Layots</h4>
            <a asp-route="admin-slider-add" class="btn btn-danger btn-lg mb-5 m">Add new Slider</a>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>OfferContext</th>
                            <th>Content</th>
                            <th>StartPrice</th>
                            <th>BtnRedirectUrl</th>
                            <th>ButtonName </th>
                            <th>Order </th>
                            <th>Created</th>
                            <th>Updated</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td><img style="width:100%" src="~/@slider.ImageUrl"></td>
                                <td>@slider.Title</td>
                                <td>@slider.OfferContext</td>
                                <td>@slider.Content</td>
                                <td>@slider.StartPrice</td>
                                <td>@slider.BtnRedirectUrl</td>
                                <td>@slider.ButtonName</td>
                                <td>@slider.Order</td>
                                <td>@slider.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>@slider.UpdatedAt.ToString("dd/MM/yyyy")</td>

                                <td class="text-end">
                                    <a asp-route="admin-slider-update" asp-route-id="@slider.Id" class="btn-outline-secondary p-3">Update</a>

                                    <form class="d-none" method="POST" asp-route="admin-slider-delete" asp-route-id="@slider.Id" id="delete-@slider.Id">
                                    </form>

                                    <button type="submit" form="delete-@slider.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>