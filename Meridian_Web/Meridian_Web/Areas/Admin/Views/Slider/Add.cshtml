@using Meridian_Web.Areas.Admin.ViewModels.Slider
@model AddSliderViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Add New Slider</h4>
            <form method="POST" asp-route="admin-slider-add" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="OfferContext"></label>
                    <input asp-for="OfferContext" class="form-control" placeholder="OfferContext">
                    <span asp-validation-for="OfferContext" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartPrice"></label>
                    <input asp-for="StartPrice" class="form-control" placeholder="StartPrice">
                    <span asp-validation-for="StartPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content">Textarea</label>
                    <textarea asp-for="Content" class="form-control" id="exampleTextarea1" rows="4" placeholder="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ButtonName"></label>
                    <input asp-for="ButtonName" class="form-control" placeholder="ButtonName">
                    <span asp-validation-for="ButtonName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ButtonRedirectUrl"></label>
                    <input asp-for="ButtonRedirectUrl" class="form-control" placeholder="ButtonRedirectUrl">
                    <span asp-validation-for="ButtonRedirectUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order"></label>
                    <input asp-for="Order" class="form-control" placeholder="Order">
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input asp-for="Image" type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                        </span>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
               
            </form>
        </div>
    </div>
</div>
