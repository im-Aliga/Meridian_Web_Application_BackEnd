@using Meridian_Web.Areas.Admin.ViewModels.Blog

@model AddViewModel
<div class="col-12 grid-margin stretch-card">
    <div class="card mt-2">
        <div class="card-body">
            <h4 class="card-title">Add New Blog</h4>
            <form method="POST" asp-route="admin-blog-add" class="forms-sample" >
                <div class="form-group">
                    <label>Categories</label>
                    <select asp-for="CategoryIds" asp-items="@(new SelectList(Model.Categories, nameof(CatagoryListItemViewModel.Id), nameof(CatagoryListItemViewModel.Title)))" class="js-example-basic-multiple" multiple="multiple" style="width:100%">
                    </select>
                </div>
                <div class="form-group">
                    <label>Tags</label>
                    <select asp-for="TagIds" asp-items="@(new SelectList(Model.Tags, nameof(TagListItemViewModel.Id), nameof(TagListItemViewModel.Tagname)))" class="js-example-basic-multiple" multiple="multiple" style="width:100%">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Textarea</label>
                    <textarea asp-for="Description" class="form-control" id="exampleTextarea1" rows="4" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProverbAuthor"></label>
                    <input asp-for="ProverbAuthor" class="form-control" placeholder="ProverbAuthor">
                    <span asp-validation-for="ProverbAuthor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Proverb">Textarea</label>
                    <textarea asp-for="Proverb" class="form-control" id="exampleTextarea1" rows="4" placeholder="Proverb"></textarea>
                    <span asp-validation-for="Proverb" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>

            </form>
        </div>
    </div>
</div>
