@using Meridian_Web.Areas.Admin.ViewModels.Order;
@model List<ListOrderViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Orders</h4>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>OrderCode</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>CreatedAt</th>
                            <th>UpdatedAt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Status</td>
                                <td>@order.Total</td>
                                <td>@order.CreatedAt</td>
                                <td>@order.UpdatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-order-update" asp-route-id="@order.Id" class="btn-outline-secondary p-3">Update</a>
                                    <form class="d-none" method="POST" asp-route="admin-order-delete" asp-route-id="@order.Id" id="delete-@order.Id">
                                    </form>

                                    <button type="submit" form="delete-@order.Id" class="btn-outline-danger p-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

