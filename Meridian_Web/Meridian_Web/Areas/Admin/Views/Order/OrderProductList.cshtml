@using Meridian_Web.Areas.Client.ViewModels.OrderProducts;
@model List<OrderProductListItemViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5">Product</h4>
          
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>ProductImg</th>
                            <th>ProductName</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>

                                <td><img style="width:50px; height:40px; object-fit:cover;" src="~/@product.ImgURl" /></td>
                                <td>@product.ProductName</td>
                                <td>@product.Quantity</td>
                                <td>@product.Total</td>

                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
